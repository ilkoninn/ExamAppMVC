@using App.Core.Entities
<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Portfolio Table</h4>
                    <a class="nav-link" asp-action="Create" asp-controller="Portfolio"><button type="button" class="btn btn-primary">Create</button></a>


                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Id
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Cover Image
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Created Date
                                    </th>
                                    <th>
                                        Updated Date
                                    </th>
                                    <th>
                                        Change Buttons
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var count = 0;
                                }
                                @foreach (var item in ViewData["Portfolios"] as IQueryable<Portfolio>)
                                {
                                    count++;
                                    <tr class="table-success">
                                        <td>
                                            @count
                                        </td>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <th>
                                            <div style="width: 100px">
                                                <img src="~/Upload/PortfolioImages/@item.CoverImageUrl" />
                                            </div>
                                        </th>
                                        <th>
                                            @item.Category.Name
                                        </th>
                                        <td>
                                            @item.CreatedDate.ToString("MM/dd/yyyy HH:mm:ss")
                                        </td>
                                        <td>
                                            @item.UpdatedDate.ToString("MM/dd/yyyy HH:mm:ss")
                                        </td>
                                        <td>
                                            <a asp-action="Update" asp-controller="Portfolio" asp-route-id="@item.Id"><button type="button" class="btn btn-warning">Update</button></a>
                                            <a asp-action="Detail" asp-controller="Portfolio" asp-route-id="@item.Id"><button type="button" class="btn btn-success">Detail</button></a>
                                            <a asp-action="Delete" asp-controller="Portfolio" asp-route-id="@item.Id"><button type="button" class="btn btn-danger">Delete</button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>