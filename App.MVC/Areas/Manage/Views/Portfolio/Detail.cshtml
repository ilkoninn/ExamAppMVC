@using App.Core.Entities;
@model Portfolio

<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Portfolio Detail:</h2>
                    <div class="d-flex justify-content-evenly">
                        <h4>Portfolio Title:</h4>
                        <h4>@Model.Title</h4>
                    </div>
                    <div class="d-flex justify-content-evenly">
                        <h4>Portfolio Category:</h4>
                        <h4>@Model.Category.Name</h4>
                    </div>
                    <div class="d-flex justify-content-evenly">
                        <h4>Portfolio Cover Image:</h4>
                        <h4>
                            <div style="width: 100px">
                                <img src="~/Upload/PortfolioImages/@Model.CoverImageUrl" />
                            </div>
                        </h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>